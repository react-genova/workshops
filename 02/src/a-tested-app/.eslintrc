{
	"parser": "babel-eslint",
	"globals": {
		"jQuery": true,
		"$": true,
		 // react-flow
		 "$Exact":true,
		 "SyntheticEvent": true
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"commonjs": true,
		"jest": true
	},
	"parserOptions": {
		"ecmaFeatures": {
            "experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"extends": ["eslint:recommended", "plugin:react/recommended"], 
	"rules": {
		"no-console": 1,
		"no-debugger": 1,
		"no-extra-semi": 1,
		"array-callback-return":2,
		"consistent-return": 2,
		"default-case": 1,
		"eqeqeq": 2,
		"no-magic-numbers": [2, { "ignore": [-1, 0, 1, 2], "ignoreArrayIndexes": true, "detectObjects": true }],
		"no-catch-shadow": 2,
		"no-unused-vars": 1,
		"comma-dangle": [1, "only-multiline"],
		"no-mixed-spaces-and-tabs": 1,
		"no-var": 2,
		"prefer-const": 1,
		"no-multiple-empty-lines": 1,
		"react/display-name": 1,
		"react/prop-types": [1, "ignore": ["children"]]
	}
}